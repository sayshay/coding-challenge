<%= form_for([@post, @comment]) do |f| %>
    <% if @comment.errors.any? %>
        <ul>
            <% @comment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>

    <% end %>

    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body %>
    </div>
    <div class="form-group">
        <%= f.submit %>
    </div>
<% end %>
